<h1>Listing portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Portfolio image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><%= portfolio.name %></td>
        <td><%= portfolio.type_of_design %></td>
        <td><%= image_tag portfolio.portfolio_image_url(:thumb) %></td>
        <td><%= portfolio.description %></td>
        <td><%= link_to 'Show', portfolio,remote: true %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   




<%= link_to "demo", portfolio, remote: true%>
 <% end %>
  </tbody>
</table>

