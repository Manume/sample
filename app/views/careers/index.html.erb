<div class="row">
  <div class="container">
    <center><h3><i>job Openings</i></h3></center>

    <table class="table table-hover">  <thead>
        <tr>
          <th>Job title</th>
          <th>Location</th>
          <th>last update</th>
          
        </tr>
      </thead>

      <tbody>
        <% @careers.each do |career| %>
          <tr>
            <td><%= link_to career.job_title,career,remote: true %></td>
            <td><%= career.location %></td>
            <td><%= time_ago_in_words career.created_at  %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


    <div id ="careers-show"></div>
    
  </div>
</div>

